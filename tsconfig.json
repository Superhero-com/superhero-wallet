{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "**/*.svg",
  ],
  "files": [
    "window.d.ts",
    "shims.d.ts",
  ]
}
